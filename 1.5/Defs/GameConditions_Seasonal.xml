<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <GameConditionDef>
    <defName>TKKN_WildFlowerBloom</defName>
    <conditionClass>TKKN_NPS.GameCondition_WildFlowerBloom</conditionClass>
    <label>wildflower bloom</label>
    <description>An unusual amount of wildflowers are blooming! Make sure you go outside to see it. Watch out for allergies!</description>
    <endMessage>The wildflower bloom is ending.</endMessage>
    <exclusiveConditions>
      <li>ColdSnap</li>
      <li>VolcanicWinter</li>
      <li>ToxicFallout</li>
    </exclusiveConditions>
  </GameConditionDef>
  <GameConditionDef>
    <defName>TKKN_Superbloom</defName>
    <conditionClass>TKKN_NPS.GameCondition_Superbloom</conditionClass>
    <label>superbloom</label>
    <description>An record setting amount of wildflowers are blooming! Make sure you go outside to see it. Watch out for allergies!</description>
    <endMessage>The superbloom is ending.</endMessage>
    <exclusiveConditions>
      <li>ColdSnap</li>
      <li>VolcanicWinter</li>
      <li>ToxicFallout</li>
    </exclusiveConditions>
  </GameConditionDef>
  <GameConditionDef>
    <defName>TKKN_Drought</defName>
    <conditionClass>TKKN_NPS.GameCondition_Drought</conditionClass>
    <label>drought</label>
    <description>There's no rain in the forecast... for a very long time.</description>
    <endMessage>The drought is ending.</endMessage>
    <canBePermanent>true</canBePermanent>
    <preventRain>true</preventRain>
    <exclusiveConditions>
      <li>TKKN_WildFlowerBloom</li>
      <li>TKKN_Superbloom</li>
    </exclusiveConditions>
  </GameConditionDef>
</Defs>
