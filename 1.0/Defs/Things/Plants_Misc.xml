<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>TKKN_PlantWildflowers</defName>
    <label>wildflowers</label>
    <description>Colorful, beautiful native plants.</description>
    <statBases>
      <MaxHitPoints>35</MaxHitPoints>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <pathCost>18</pathCost>
    <graphicData>
      <texPath>TKKN_NPS/Things/Plant/Wildflowers</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.1</hideAtSnowDepth>
    <ingestible />
    <plant>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>0.7</fertilitySensitivity>
      <growDays>3</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestWork>60</harvestWork>
      <visualSizeRange>
        <min>0.5</min>
        <max>0.85</max>
      </visualSizeRange>
      <wildClusterWeight>30</wildClusterWeight>
      <wildClusterRadius>3</wildClusterRadius>
      <topWindExposure>0.4</topWindExposure>
    </plant>
  </ThingDef>
  <ThingDef ParentName="PlantBase">
    <defName>TKKN_PlantBarnacles</defName>
    <label>barnacles</label>
    <description>Exclusively marine arthropods that tend to live in shallow and tidal waters</description>
    <statBases>
      <MaxHitPoints>35</MaxHitPoints>
      <Nutrition>0.25</Nutrition>
    </statBases>
    <pathCost>18</pathCost>
    <graphicData>
      <texPath>TKKN_NPS/Things/HarvestableMisc/VarientHarvestable/Barnacles</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <!-- maybe this will stop it from blowing in the wind -->
      <shaderType>Cutout</shaderType>
    </graphicData>
    <ingestible />
    <selectable>true</selectable>
    <plant>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>TKKN_ShellfishMeat</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <fertilityMin>.0001</fertilityMin>
      <fertilitySensitivity>0</fertilitySensitivity>
      <growDays>3</growDays>
      <dieIfLeafless>false</dieIfLeafless>
      <harvestWork>60</harvestWork>
      <immatureGraphicPath>TKKN_NPS/Things/HarvestableMisc/Barnacles</immatureGraphicPath>
      <visualSizeRange>
        <min>1.4</min>
        <max>1.8</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
