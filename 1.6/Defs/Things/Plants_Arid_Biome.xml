<Defs>
  <ThingDef ParentName="PlantBase">
    <defName>TKKN_PlantWildCorn</defName>
    <label>wild corn plant</label>
    <description>Wild corn is smaller and hardier than its domestic counterpart. Grows in a variety of soil, but produces small crops.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/CornPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible />
    <plant>
      <fertilitySensitivity>.7</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawCorn</harvestedThingDef>
      <harvestYield>13</harvestYield>
      <topWindExposure>0.35</topWindExposure>
      <growDays>11.3</growDays>
      <immatureGraphicPath>Things/Plant/CornPlant_Immature</immatureGraphicPath>
      <visualSizeRange>0.3~1.4</visualSizeRange>
    </plant>
  </ThingDef>
